{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "noImplicitOverride": true,
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"],
    "outDir": "../out-tsc/app",
    "target": "ES2022",
    "module": "commonjs",
    "baseUrl": ".",
    "rootDir": ".",
    "strict": true,
    "types": ["node"],
    "paths": {
      "@hashbrownai/angular": ["dist/packages/angular/index.d.ts"],
      "@hashbrownai/core": ["dist/packages/core/index.d.ts"],
      "@hashbrownai/react": ["dist/packages/react/index.d.ts"],
      "@hashbrownai/azure": ["dist/packages/azure/src/index.d.ts"],
      "@hashbrownai/google": ["dist/packages/google/src/index.d.ts"],
      "@hashbrownai/ollama": ["dist/packages/ollama/src/index.d.ts"],
      "@hashbrownai/openai": ["dist/packages/openai/src/index.d.ts"],
      "@hashbrownai/writer": ["dist/packages/writer/src/index.d.ts"]
    }
  },
  "include": ["dist/packages/**/*.d.ts"],
  "exclude": [
    "dist/packages/**/*.js",
    "dist/packages/**/*.js.map",
    "node_modules",
    "**/*/node_modules",
    "packages/**/*",
    "samples/**/*",
    "www/**/*"
  ]
}
