{
  "name": "www",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "www/analog/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@analogjs/platform:vite",
      "defaultConfiguration": "production",
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "sourcemap": false,
          "mode": "production"
        }
      },
      "outputs": [
        "{options.outputPath}",
        "{workspaceRoot}/dist/www/analog/.nitro",
        "{workspaceRoot}/dist/www/analog/ssr",
        "{workspaceRoot}/dist/www/analog/analog"
      ],
      "options": {
        "main": "www/analog/src/main.ts",
        "configFile": "www/analog/vite.config.ts",
        "outputPath": "dist/www/analog/client",
        "tsConfig": "www/analog/tsconfig.app.json",
        "styles": ["@angular/cdk/overlay-prebuilt.css"]
      },
      "dependsOn": ["collect-docs", "generate-llms", "www-netlify:build"]
    },
    "serve": {
      "executor": "@analogjs/platform:vite-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "www:build",
        "port": 4200,
        "host": "0.0.0.0"
      },
      "configurations": {
        "development": {
          "buildTarget": "www:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "www:build:production"
        }
      }
    },
    "test": {
      "executor": "@analogjs/vitest-angular:test",
      "outputs": ["{projectRoot}/coverage"],
      "options": {
        "passWithNoTests": true
      }
    },
    "collect-docs": {
      "executor": "nx:run-script",
      "options": {
        "script": "collect-docs"
      },
      "dependsOn": [
        {
          "projects": ["angular", "core", "react"],
          "target": "build"
        }
      ]
    },
    "generate-llms": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node src/tools/generate-llms.mjs --outputDir=www/analog/public --docsRoot=src/app/pages/docs --baseUrl=https://hashbrown.dev",
        "cwd": "{projectRoot}"
      }
    },
    "review-docs": {
      "executor": "nx:run-script",
      "options": {
        "script": "review-docs"
      },
      "dependsOn": [
        {
          "projects": [
            "angular",
            "azure",
            "core",
            "google",
            "openai",
            "react",
            "writer"
          ],
          "target": "build-api-report"
        }
      ]
    },
    "translate-docs": {
      "executor": "nx:run-script",
      "options": {
        "script": "translate-docs"
      },
      "dependsOn": [
        {
          "projects": [
            "angular",
            "azure",
            "core",
            "google",
            "openai",
            "react",
            "writer"
          ],
          "target": "build-api-report"
        }
      ]
    }
  }
}
