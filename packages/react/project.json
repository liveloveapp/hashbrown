{
  "name": "react",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/react/src",
  "projectType": "library",
  "release": {
    "version": {
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk",
      "preserveLocalDependencyProtocols": false,
      "manifestRootsToUpdate": ["dist/packages/react", "packages/react"]
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "main": "packages/react/src/index.ts",
        "tsConfig": "packages/react/tsconfig.lib.json",
        "outputPath": "dist/packages/react",
        "format": ["esm", "cjs"],
        "generateExportsField": true,
        "assets": [
          {
            "input": "packages/react",
            "glob": "LICENSE",
            "output": "."
          },
          {
            "input": "packages/react",
            "glob": "README.md",
            "output": "."
          }
        ]
      },
      "dependsOn": [
        {
          "projects": ["core"],
          "target": "build"
        }
      ]
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["^nx-release-publish"],
      "options": {
        "packageRoot": "dist/packages/react"
      }
    },
    "build-api-report": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx api-extractor run --local --config packages/react/api-extractor.json",
        "parallel": true
      },
      "dependsOn": [
        {
          "projects": ["react"],
          "target": "build"
        }
      ]
    }
  }
}
