{
  "name": "ollama",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ollama/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/ollama",
        "tsConfig": "packages/ollama/tsconfig.lib.json",
        "packageJson": "packages/ollama/package.json",
        "main": "packages/ollama/src/index.ts",
        "assets": ["packages/ollama/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/ollama/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ollama/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "e2e": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ollama/jest.e2e.config.ts",
        "passWithNoTests": true
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["^nx-release-publish"],
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "build-api-report": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx api-extractor run --local --config packages/ollama/api-extractor.json",
        "parallel": true
      },
      "dependsOn": [
        {
          "projects": ["ollama"],
          "target": "build"
        }
      ]
    }
  }
}
