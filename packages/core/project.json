{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag",
        "fallbackCurrentVersionResolver": "disk"
      }
    }
  },
  "tags": ["shared"],
  "targets": {
    "build": {
      "outputs": ["{options.outputPath}"],
      "executor": "@nx/rollup:rollup",
      "options": {
        "main": "packages/core/src/index.ts",
        "tsConfig": "packages/core/tsconfig.lib.json",
        "outputPath": "dist/packages/core",
        "format": ["esm", "cjs"],
        "outputFileName": "index",
        "outputFileExtensionForEsm": ".mjs",
        "outputFileExtensionForCjs": ".cjs",
        "assets": [
          {
            "input": "packages/core",
            "glob": "LICENSE",
            "output": "."
          },
          {
            "input": "packages/core",
            "glob": "README.md",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/core/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "parser-test-server": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node packages/core/src/streaming-json-parser/test/server.ts"
      }
    },
    "parser-test-client": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node packages/core/src/streaming-json-parser/test/client.ts"
      }
    },
    "build-api-report": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx api-extractor run --local --config packages/core/api-extractor.json",
        "parallel": true
      },
      "dependsOn": [
        {
          "projects": ["core"],
          "target": "build"
        }
      ]
    }
  }
}
