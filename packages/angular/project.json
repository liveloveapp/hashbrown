{
  "name": "angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/angular/src",
  "prefix": "lib",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag",
        "fallbackCurrentVersionResolver": "disk"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/angular/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/angular/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/angular/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build-api-report": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx api-extractor run --local --config packages/angular/api-extractor.json",
        "parallel": true
      },
      "dependsOn": [
        {
          "projects": ["angular"],
          "target": "build"
        }
      ]
    }
  }
}
