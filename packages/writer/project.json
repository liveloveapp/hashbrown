{
  "name": "writer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/writer/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/packages/writer"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk",
      "preserveLocalDependencyProtocols": false
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/writer",
        "tsConfig": "packages/writer/tsconfig.lib.json",
        "packageJson": "packages/writer/package.json",
        "main": "packages/writer/src/index.ts",
        "assets": [
          "packages/writer/*.md",
          {
            "input": ".",
            "glob": "LICENSE",
            "output": "."
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/writer/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "e2e": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/writer/jest.e2e.config.ts",
        "passWithNoTests": true
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "dependsOn": ["^nx-release-publish"],
      "options": {
        "packageRoot": "dist/packages/writer"
      }
    },
    "build-api-report": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx api-extractor run --local --config packages/writer/api-extractor.json",
        "parallel": true
      },
      "dependsOn": [
        {
          "projects": ["writer"],
          "target": "build"
        }
      ]
    }
  }
}
