{
  "root": true,
  "plugins": ["import"],
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "sort-imports": ["error", { "ignoreCase": true, "ignoreDeclarationSort": true }],
        "import/order": [
          "warn",
          {
            "alphabetize": {
              "order": "asc",
              "caseInsensitive": true
            }
          }
        ],
        "import/first": "error",
        "import/newline-after-import": "error",
        "import/no-duplicates": "error"
      }
    }
  ]
}
