{
  "name": "finance-angular",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "samples/finance/angular/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/samples/finance/angular",
        "browser": "samples/finance/angular/src/main.ts",
        "tsConfig": "samples/finance/angular/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "samples/finance/angular/public"
          }
        ],
        "styles": ["samples/finance/angular/src/styles.scss"],
        "server": "samples/finance/angular/src/main.server.ts",
        "ssr": {
          "entry": "samples/finance/angular/src/server.ts"
        },
        "outputMode": "server"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "2mb",
              "maximumError": "4mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "ssr": {
            "entry": "samples/finance/angular/src/node.ts"
          },
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "ssr": {
            "entry": "samples/finance/angular/src/node.ts"
          }
        },
        "netlify": {
          "ssr": {
            "entry": "samples/finance/angular/src/server.ts"
          },
          "outputHashing": "all",
          "allowedCommonJsDependencies": [
            "formdata-node",
            "node-domexception",
            "web-streams-polyfill",
            "fetch-blob"
          ]
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "options": {
        "port": 4600
      },
      "configurations": {
        "production": {
          "buildTarget": "finance-angular:build:production"
        },
        "development": {
          "buildTarget": "finance-angular:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "finance-angular:build"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "finance-angular:build",
        "port": 4600,
        "staticFilePath": "dist/samples/finance/angular/browser",
        "spa": true
      }
    }
  }
}
