{
  "name": "finance-server",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "samples/finance/server/src",
  "projectType": "application",
  "targets": {
    "generate-data": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx samples/finance/server/tools/generate-ingredients.ts"
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["generate-data"],
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/samples/finance/server",
        "format": ["cjs"],
        "bundle": false,
        "main": "samples/finance/server/src/main.ts",
        "tsConfig": "samples/finance/server/tsconfig.app.json",
        "generatePackageJson": true,
        "assets": [
          {
            "input": "samples/finance/server/src",
            "glob": "ingredients.json",
            "output": "samples/finance/server/src"
          }
        ],
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "finance-server:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "finance-server:build:development"
        },
        "production": {
          "buildTarget": "finance-server:build:production"
        }
      }
    }
  },
  "tags": []
}
